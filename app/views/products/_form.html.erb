
<%= form_for @product, :class => "form-horizontal" ,html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :name, :class => "control-label"  %>
      <div class="">
        <%= f.text_field :name, :class => "form-control", :id => "name" %>
      </div>
    </div>  	

    <div class="form-group">
      <%= f.label :description, :class => "control-label"  %>
      <div class="">
        <%= f.text_area :description, :class => "form-control", :id => "description" %>
      </div>
    </div>      

    <div class="form-group">
      <%= f.label :image, :class => "control-label"  %>
      <div class="">
        <%= f.file_field  :image, :class => "form-control", :id => "image" %>
      </div>
    </div>  

    <div class="form-group">
      <%= f.label :rate, :class => "control-label"  %>
      <div class="">
        <%= f.text_field :rate, :class => "form-control", :id => "rate" %>
      </div>
    </div>          

	<%= f.submit "Create", :class => "btn btn-primary" %>
<% end %>
