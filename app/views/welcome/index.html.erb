
<h1>Products</h1>

<% if @products.empty? %>
	<h3>Currently there are no items in the Store :( !</h4>
<% end %>


<div class="row">
<% @products.each do |p|  %>
	<div class="col-lg-3">
		<%= image_tag p.image.url(:medium) %>
		<p> <%= p.name %> </p>
		<p> <%= p.description %> </p>
		<p> <%= p.rate %> </p>			
	</div>
<% end %>
</div>
